<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:textSize="@dimen/ba_muoi"
        android:background="#f20"
        android:layout_centerHorizontal="true"
        android:text="Top Content Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/bon_muoi"
            android:background="#2FFF00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"/>
        <TextView
            android:layout_margin="20dp"
            android:textSize="@dimen/bon_muoi"
            android:background="#001AFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second"/>
        <TextView
            android:textSize="@dimen/bon_muoi"
            android:background="#FF8C00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Three"/>


    </LinearLayout>
    <TextView
        android:textSize="@dimen/ba_muoi"
        android:background="#757171"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Bottom Content Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>